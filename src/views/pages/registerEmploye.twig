{% extends "../layouts/base.twig" %}

{% block title %}Ajouter un employé
{% endblock %}

{% block main %}
	<div class="min-h-screen flex items-center justify-center py-16 px-4">
		<div class="max-w-xl w-full bg-[#23232a] rounded-2xl shadow-2xl p-12 border-2 border-[#d6bfa7]">
			<h1 class="text-5xl font-bold text-center text-[#d6bfa7] mb-8">Projet RH</h1>
			<h2 class="text-3xl text-center text-[#a89682] mb-12">Ajouter un employé</h2>

			{% if error %}
				<div class="bg-red-100/10 text-red-400 p-4 rounded-lg mb-6 text-center">
					{{ error }}
				</div>
			{% endif %}

			<form method="post" action="/employes/register" class="space-y-8">
				<div class="space-y-4">
					<label for="nom" class="block text-2xl font-medium text-[#d6bfa7] text-center mb-3">
						Nom
					</label>
					<input type="text" id="nom" name="nom" required minlength="2" class="block w-full text-center text-xl rounded-xl border-2 border-[#d6bfa7]
										                           bg-[#2a2a33] text-[#d6bfa7] py-6 px-5 min-h-[4rem]
										                           focus:ring-2 focus:ring-[#d6bfa7] focus:border-[#d6bfa7]
										                           placeholder-[#8b7355]">
				</div>

				<div class="space-y-4">
					<label for="prenom" class="block text-2xl font-medium text-[#d6bfa7] text-center mb-3">
						Prénom
					</label>
					<input type="text" id="prenom" name="prenom" required minlength="2" class="block w-full text-center text-xl rounded-xl border-2 border-[#d6bfa7]
										                           bg-[#2a2a33] text-[#d6bfa7] py-6 px-5 min-h-[4rem]
										                           focus:ring-2 focus:ring-[#d6bfa7] focus:border-[#d6bfa7]
										                           placeholder-[#8b7355]">
				</div>

				<div class="space-y-4">
					<label for="poste" class="block text-2xl font-medium text-[#d6bfa7] text-center mb-3">
						Poste
					</label>
					<input type="text" id="poste" name="poste" required minlength="2" class="block w-full text-center text-xl rounded-xl border-2 border-[#d6bfa7]
										                           bg-[#2a2a33] text-[#d6bfa7] py-6 px-5 min-h-[4rem]
										                           focus:ring-2 focus:ring-[#d6bfa7] focus:border-[#d6bfa7]
										                           placeholder-[#8b7355]">
				</div>

				<div class="space-y-4">
					<label for="mail" class="block text-2xl font-medium text-[#d6bfa7] text-center mb-3">
						Email
					</label>
					<input type="email" id="mail" name="mail" required class="block w-full text-center text-xl rounded-xl border-2 border-[#d6bfa7]
										                           bg-[#2a2a33] text-[#d6bfa7] py-6 px-5 min-h-[4rem]
										                           focus:ring-2 focus:ring-[#d6bfa7] focus:border-[#d6bfa7]
										                           placeholder-[#8b7355]">
				</div>

				<div class="space-y-4">
					<label for="genre" class="block text-2xl font-medium text-[#d6bfa7] text-center mb-3">
						Genre
					</label>
					<select id="genre" name="genre" required class="block w-full text-center text-xl rounded-xl border-2 border-[#d6bfa7]
							                           bg-[#2a2a33] text-[#d6bfa7] py-6 px-5 min-h-[4rem]
							                           focus:ring-2 focus:ring-[#d6bfa7] focus:border-[#d6bfa7]
							                           placeholder-[#8b7355]">
						<option value="homme">Homme</option>
						<option value="femme">Femme</option>
						<option value="autre">Autre</option>
					</select>
				</div>

				<button type="submit" class="w-full bg-[#d6bfa7] text-[#23232a] font-bold text-xl py-6 px-8 rounded-xl min-h-[4rem]
												                       hover:bg-[#bfa888] transform hover:scale-[1.02]
												                       transition-all duration-200 ease-in-out
												                       shadow-lg hover:shadow-xl mt-8">
					Ajouter l'employé
				</button>
			</form>
		</div>
	</div>
{% endblock %}
