{% extends "../layouts/base.twig" %}


{% block main %}
	<div class="min-h-screen flex items-center justify-center py-16 px-4">
		<div
			class="max-w-xl w-full bg-[#2d2d2d] rounded-2xl shadow-2xl p-12 border-2 border-[#d6bfa7]">
			
			<h1 class="text-5xl font-bold text-center text-[#d6bfa7] mb-8" style="font-family: 'Times New Roman', Times, serif;">
				RH Digital
			</h1>
			<h2 class="text-3xl text-center text-[#a89682] mb-12">Inscription</h2>

			{% if error %}
				<div class="bg-red-100/10 text-red-400 p-4 rounded-lg mb-6 text-center">
					{{ error }}
				</div>
			{% endif %}

			<form
				method="post" class="space-y-8">
				<div class="space-y-4">
					<label for="raisonSociale" class="block text-2xl font-medium text-[#d6bfa7] text-center mb-3">
						Raison Sociale
					</label>
					<input type="text" id="raisonSociale" name="raisonSociale" required class="block w-full text-center text-xl rounded-xl border-2 border-[#d6bfa7]
										                              bg-[##2d2d2d] text-[#d6bfa7] py-6 px-5 min-h-[4rem]
										                              focus:ring-4 focus:ring-[#d6bfa7] focus:border-[#d6bfa7] transition-all duration-200
										                              placeholder-[#8b7355]">
				</div>

				<div class="space-y-4">
					<label for="siret" class="block text-2xl font-medium text-[#d6bfa7] text-center mb-2.5">
						SIRET
					</label>
					<input type="text" id="siret" name="siret" required class="block w-full text-center text-xl rounded-xl border-2 border-[#d6bfa7]
										                              bg-[##2d2d2d] text-[#d6bfa7] py-6 px-5 min-h-[4rem]
										                              focus:ring-4 focus:ring-[#d6bfa7] focus:border-[#d6bfa7] transition-all duration-200
										                              placeholder-[#8b7355]">
				</div>

				<div class="space-y-4">
					<label for="mail" class="block text-2xl font-medium text-[#d6bfa7] text-center mb-3">
						Adresse email
					</label>
					<input type="email" id="mail" name="mail" required class="block w-full text-center text-xl rounded-xl border-2 border-[#d6bfa7]
										                              bg-[##2d2d2d] text-[#d6bfa7] py-6 px-5 min-h-[4rem]
										                              focus:ring-4 focus:ring-[#d6bfa7] focus:border-[#d6bfa7] transition-all duration-200
										                              placeholder-[#8b7355]">
				</div>

				<div class="space-y-4">
					<label for="password" class="block text-2xl font-medium text-[#d6bfa7] text-center mb-3">
						Mot de passe
					</label>
					<input type="password" id="password" name="password" required class="block w-full text-center text-xl rounded-xl border-2 border-[#d6bfa7]
										                              bg-[##2d2d2d] text-[#d6bfa7] py-6 px-5 min-h-[4rem]
										                              focus:ring-4 focus:ring-[#d6bfa7] focus:border-[#d6bfa7] transition-all duration-200
										                              placeholder-[#8b7355]">
				</div>

				<div class="space-y-4">
					<label for="confirmPassword" class="block text-2xl font-medium text-[#d6bfa7] text-center mb-3">
						Confirmer le mot de passe
					</label>
					<input type="password" id="confirmPassword" name="confirmPassword" required class="block w-full text-center text-xl rounded-xl border-2 border-[#d6bfa7]
										                              bg-[##2d2d2d] text-[#d6bfa7] py-6 px-5 min-h-[4rem]
										                              focus:ring-4 focus:ring-[#d6bfa7] focus:border-[#d6bfa7] transition-all duration-200
										                              placeholder-[#8b7355]">
				</div>

				<div class="space-y-4">
					<label for="name" class="block text-2xl font-medium text-[#d6bfa7] text-center mb-3">
						Nom du Directeur
					</label>
					<input type="text" id="name" name="name" required class="block w-full text-center text-xl rounded-xl border-2 border-[#d6bfa7]
										                              bg-[##2d2d2d] text-[#d6bfa7] py-6 px-5 min-h-[4rem]
										                              focus:ring-4 focus:ring-[#d6bfa7] focus:border-[#d6bfa7] transition-all duration-200
										                              placeholder-[#8b7355]">
				</div>

				<button type="submit" class="w-full bg-[#d6bfa7] text-[#2d2d2d] font-bold text-xl py-6 px-8 rounded-xl min-h-[4rem]
												                           hover:bg-[#bfa888] transform hover:scale-[1.02]
												                           transition-all duration-200 ease-in-out
												                           shadow-lg hover:shadow-xl mt-8">
					S'inscrire
				</button>
			</form>

			<div class="mt-8 text-center">
				<span class="text-[#a89682]">Déjà un compte ?
				</span>
				<a href="/login" class="text-[#d6bfa7] hover:text-[#bfa888] font-semibold transition-colors">
					Se connecter
				</a>
			</div>
		</div>
	</div>
{% endblock %}
