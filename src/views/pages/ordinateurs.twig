{% extends "../layouts/base.twig" %}

{% block title %}
    <title>Gestion des Ordinateurs</title>
{% endblock %}

{% block main %}
<main class="p-6 bg-stone-100 min-h-screen">
    <section class="max-w-7xl mx-auto">

        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-stone-800">Gestion des Ordinateurs</h1>
            <a href="/ordinateurs/register" 
               class="bg-stone-800 text-white px-4 py-2 rounded hover:bg-stone-700 transition-colors">
                + Nouvel ordinateur
            </a>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for ordinateur in ordinateurs %}
                <div class="bg-white rounded-lg shadow-sm">
                   
                    <div class="p-4 border-b border-stone-100">
                        <h3 class="font-semibold">{{ ordinateur.marque }} {{ ordinateur.modele }}</h3>
                        <p class="text-sm text-stone-500">MAC: {{ ordinateur.macAddress }}</p>
                    </div>

                    
                    <div class="p-4 space-y-3">
                        <div class="flex justify-between items-center">
                            <span class="text-sm font-medium">Statut:</span>
                            <span class="text-sm px-2 py-1 rounded-full {% if ordinateur.disponible %}bg-green-100 text-green-700{% else %}bg-blue-100 text-blue-700{% endif %}">
                                {{ ordinateur.statut }}
                            </span>
                        </div>

               
                        <form method="post" action="/ordinateurs/attribuer" class="space-y-2">
                            <input type="hidden" name="ordinateurId" value="{{ ordinateur.id }}">
                            <select name="employeId" class="w-full text-sm border rounded p-2">
                                <option value="">-- Sélectionner un employé --</option>
                                {% for employe in employes %}
                                    <option value="{{ employe.id }}" {% if ordinateur.employeId == employe.id %}selected{% endif %}>
                                        {{ employe.prenom }} {{ employe.nom }}
                                    </option>
                                {% endfor %}
                            </select>
                            <button type="submit" 
                                    class="w-full bg-stone-100 text-stone-600 text-sm py-2 rounded hover:bg-stone-200 transition-colors">
                                {% if ordinateur.employeId %}Réattribuer{% else %}Attribuer{% endif %}
                            </button>
                        </form>
                        
                        <form method="post" action="/ordinateurs/delete/{{ ordinateur.id }}" class="mt-2">
                            <button type="submit" 
                                    class="w-full bg-red-50 text-red-600 text-sm py-2 rounded hover:bg-red-100 transition-colors"
                                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet ordinateur ?')">
                                Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            {% else %}
                <div class="col-span-full text-center py-8 bg-white rounded-lg">
                    <p class="text-stone-500">Aucun ordinateur enregistré</p>
                </div>
            {% endfor %}
        </div>
    </section>
</main>
{% endblock %}