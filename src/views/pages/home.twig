{% extends "../layouts/base.twig" %}

{% block title %}
    <title>Accueil Ressources Humaines</title>
{% endblock %}

{% block main %}
    <main class="p-8 bg-[#f6f5f2] min-h-screen">
        <section class="max-w-7xl mx-auto">
            <h2 class="text-2xl font-bold mb-4">Bienvenue {{ RH.name }}</h2>
            <div class="bg-white p-4 rounded-lg shadow mb-8">
                <p class="text-gray-600">Vous êtes maintenant connecté!</p>
            </div>
            
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-bold">Liste des Employés</h3>
                <a href="/employes/register" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition">
                    + Ajouter un employé
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for employe in employes %}
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
                        <div class="bg-blue-500 p-4">
                            <h3 class="text-xl font-bold text-white">
                                {{ employe.prenom }} {{ employe.nom }}
                            </h3>
                        </div>
                        <div class="p-6 space-y-3">
                            <div class="flex items-center text-gray-600">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                                <span>{{ employe.mail }}</span>
                            </div>
                            {% if employe.age %}
                                <div class="flex items-center text-gray-600">
                                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z"/>
                                    </svg>
                                    <span>{{ employe.age }} ans</span>
                                </div>
                            {% endif %}
                            {% if employe.genre %}
                                <div class="flex items-center text-gray-600">
                                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                    </svg>
                                    <span>{{ employe.genre }}</span>
                                </div>
                            {% endif %}
                        </div>
                        <div class="px-6 pb-4 flex gap-2">
                            <a href="/employes/edit/{{ employe.id }}" 
                               class="flex-1 bg-yellow-500 text-white text-center py-2 rounded hover:bg-yellow-600 transition">
                                Modifier
                            </a>
                            <form method="post" action="/employes/delete/{{ employe.id }}" class="flex-1">
                                <button type="submit" 
                                        class="w-full bg-red-500 text-white py-2 rounded hover:bg-red-600 transition"
                                        onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet employé ?')">
                                    Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                {% else %}
                    <div class="col-span-3 text-center py-12 bg-white rounded-lg shadow">
                        <p class="text-gray-500">Aucun employé trouvé</p>
                        <a href="/employes/register" class="inline-block mt-4 text-blue-500 hover:text-blue-600">
                            Ajouter un premier employé
                        </a>
                    </div>
                {% endfor %}
            </div>
        </section>
    </main>
{% endblock %}
