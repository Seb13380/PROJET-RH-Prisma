{% extends "../layouts/base.twig" %}

{% block title %}
    <title>Projet RH Connexion</title>
{% endblock %}

{% block main %}
<main class="flex items-center justify-center min-h-screen bg-[#f6f5f2]">
    <section class="w-full max-w-md bg-[#d6c3b0] shadow-lg rounded-xl p-8 border border-taupe-200">
        <h1 class="text-2xl font-bold mb-6 text-taupe-700 text-center">Connexion</h1>
        <form method="post" action="/login" class="space-y-4">
            {% if error.global %}
                <p class="text-red-500 text-center">{{ error.global }}</p>
            {% endif %}
            <div>
                <label for="mail" class="block text-taupe-700 mb-1">Votre email</label>
                <input type="email" name="mail" id="mail" required
                    class="w-full px-4 py-2 rounded-lg border border-taupe-200 bg-gray-100 focus:outline-none focus:ring-2 focus:ring-pastel-100" />
                {% if error.mail %}
                    <p class="text-red-500 text-sm mt-1">{{ error.mail }}</p>
                {% endif %}
            </div>
            <div>
                <label for="password" class="block text-taupe-700 mb-1">Votre mot de passe</label>
                <input type="password" name="password" id="password" required
                    class="w-full px-4 py-2 rounded-lg border border-taupe-200 bg-gray-100 focus:outline-none focus:ring-2 focus:ring-pastel-100" />
                {% if error.password %}
                    <p class="text-red-500 text-sm mt-1">{{ error.password }}</p>
                {% endif %}
            </div>
            <button type="submit"
                class="block mx-auto w-full py-2 rounded-lg bg-[#f6f5f2] text-[#6d4c2b] font-semibold border border-taupe-200 hover:bg-[#e7d8c9] transition">
                Se connecter
            </button>
        </form>
    </section>
</main>
{% endblock %}
